{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "next-auth"
    ],
    "paths": {
      "@/*": [
        "app/*"
      ],
      "~/*": [
        "src/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "app/**/*.{js,ts,jsx,tsx}",
    "pages/**/*.{js,ts,jsx,tsx}",
    "components/**/*.{js,ts,jsx,tsx}",
    "src/**/*.{js,ts,jsx,tsx}",
    "styles/**/*.{js,ts,jsx,tsx}",
    "next.config.js",
    "prisma/**/*.{js,ts}",
    "tailwind.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}